{
  "name": "sightedit",
  "version": "3.0.0",
  "description": "A WYSIWYG Markdown Editor for Windows",
  "type": "module",
  "main": "src/main/main.js",
  "author": "DuckEngine LLC",
  "license": "MIT",
  "homepage": "https://duckengine.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/mike2mike45/sightedit.git"
  },
  "scripts": {
    "start": "npm run build && electron .",
    "build": "webpack",
    "dev": "webpack --watch",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:portable": "npm run build && electron-builder --win portable",
    "dist:all": "npm run build && electron-builder --win --mac --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "markdown",
    "editor",
    "wysiwyg",
    "electron"
  ],
  "devDependencies": {
    "css-loader": "^6.8.1",
    "electron": "^31.0.0",
    "electron-builder": "^25.0.0",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@tiptap/core": "^3.0.0",
    "@tiptap/extension-code-block-lowlight": "^3.0.0",
    "@tiptap/extension-image": "^3.0.0",
    "@tiptap/extension-link": "^3.0.0",
    "@tiptap/extension-placeholder": "^3.0.0",
    "@tiptap/extension-table": "^3.0.0",
    "@tiptap/extension-table-cell": "^3.0.0",
    "@tiptap/extension-table-header": "^3.0.0",
    "@tiptap/extension-table-row": "^3.0.0",
    "@tiptap/extension-task-item": "^3.0.0",
    "@tiptap/extension-task-list": "^3.0.0",
    "@tiptap/extension-text-align": "^3.0.0",
    "@tiptap/pm": "^3.0.0",
    "@tiptap/starter-kit": "^3.0.0",
    "electron-updater": "^6.6.2",
    "lowlight": "^3.1.0",
    "marked": "^11.1.0",
    "simple-git": "^3.21.0",
    "turndown": "^7.1.2"
  },
  "build": {
    "appId": "com.duckengine.sightedit",
    "productName": "SightEdit",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*.js",
      "dist/**/*.css",
      "dist/index.html",
      "src/main/**/*",
      "assets/**/*",
      "!**/node_modules/**/*",
      "!**/*.map",
      "!**/*.log",
      "!**/.git/**/*",
      "!**/.github/**/*",
      "!**/test/**/*",
      "!**/tests/**/*",
      "!**/*.test.js",
      "!**/*.spec.js"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "DuckEngine LLC",
      "certificateSubjectName": "DuckEngine LLC",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SightEdit",
      "uninstallDisplayName": "SightEdit",
      "license": "LICENSE",
      "language": "1041",
      "installerLanguages": ["ja", "en"],
      "menuCategory": true,
      "warningsAsErrors": false
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Office",
      "icon": "assets/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "mike2mike45",
      "repo": "sightedit"
    }
  }
}